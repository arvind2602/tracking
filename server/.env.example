# Database
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# Authentication
JWT_SECRET=replace-with-64-byte-hex-string-generated-via-node-crypto
JWT_EXPIRY=24h

# Cloudinary (Image Uploads)
